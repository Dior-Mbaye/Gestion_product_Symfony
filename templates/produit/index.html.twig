{% extends 'base.html.twig' %}

{% block title %}
  liste produits
{% endblock %}

{% block body %}
  <nav class="navbar navbar-expand-lg" style="background-color: #0d3283;color:white">
    <a class="navbar-brand" href="#" style="color:white">Gestion de produits</a>
    <button class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent" >
      <ul class="navbar-nav mr-auto">
        <li class="nav-item" style="color:white">
          <a class="nav-link" href="{{ path('produit') }}" style="color:white">
            Liste des produits
          </a>
        </li>
        <li class="nav-item" style="color:white">
          <a class="nav-link" href="{{ path('produit_create') }}" style="color:white">
            Ajouter un produit
          </a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="container" style="margin-top:20px">
  <div class="row" style="border-bottom:4px solid #0d3283">
    <h3>La liste des produits disponibles</h3>
  </div>
    <div class="row" style="justify-content:space-between;margin-top:20px">
      {% for produit in produits %}
        <div class="card" style="width: 15rem; ">
          <img class="card-img-top"
            src="{{ produit.photo }}"
            alt="Card image cap" />
          <div class="card-body">
            <h5 class="card-title">
              {{ produit.nom }} {{ produit.prix }} F CFA
            </h5>
            <p class="card-text">
              {{ produit.description }}
            </p>
            <a href="{{
              path(
                'produit_edit',
                {
                  id: produit.id
                }
              )
              }}" class="card-link"><button class="btn btn-primary">Editer</button></a>
            <a href="{{
              path(
                'produit_remove',
                {
                  id: produit.id
                }
              )
              }}" class="card-link"><button class="btn btn-danger">Supprimer</button></a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
